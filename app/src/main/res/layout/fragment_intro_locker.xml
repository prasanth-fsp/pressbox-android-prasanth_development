<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar_text"></include>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="fonts/ProximaNova-SemiBold.otf"
        android:maxLines="4"
        android:text="@string/placeClothes"
        android:textAlignment="center"
        android:textColor="@color/welcome"
        android:textSize="@dimen/text_xlarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="fonts/ProximaNova-SemiBold.otf"
        android:lineSpacingExtra="2sp"
        android:text="@string/lockGuide"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_large" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/locker" />
    </RelativeLayout>

    <View style="@style/viewstyle"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tw_finish_up"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Finish up"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/welcome"
            android:textSize="@dimen/text_large" />
    </LinearLayout>


</LinearLayout>