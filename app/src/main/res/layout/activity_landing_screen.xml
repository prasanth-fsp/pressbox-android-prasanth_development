<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    tools:context="com.usepressbox.pressbox.landing_screen">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="@drawable/presslogo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/clearExp"
            android:textColor="@color/cleanerexp"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="0.5dp"
        android:background="#bfbfbf"
        android:visibility="invisible">

        <TextView
            android:id="@+id/btn_register"
            android:text="Get Started"
            style="@style/getStartedButton"/>

        <TextView
            android:id="@+id/btn_login"
            android:text="Login"
            style="@style/getStartedButton" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_intro_video"
        android:layout_below="@+id/linearLayout2"
        android:gravity="center_vertical"
        style="@style/IntroVideoButton"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:id="@+id/introtextview"
            android:text="See how we work"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large"
            android:fontFamily="fonts/ProximaNova-Semibold.otf"

            />

        <ImageView
            android:id="@+id/btn_intro_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/playarrow2"
             />

    </LinearLayout>



</RelativeLayout>
